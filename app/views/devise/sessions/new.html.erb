<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>ログイン</h2>
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <div class="field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, autofocus: true, class: "name" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード"  %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
        </div>

        <!--<% if devise_mapping.rememberable? %>-->
          <!--<div class="field">-->
            <!--<%= f.check_box :remember_me %>-->
            <!--<%= f.label :remember_me %>-->
          <!--</div>-->
        <!--<% end %>-->

        <div class="actions">
          <%= f.submit "ログイン" ,class: 'btn btn-sm btn-primary'%>
        </div>

      <% end %>
      <h6>登録がお済みでない方は<br>
        <%= render "devise/shared/links" %>
      </h6>
    </div>
  </div>
</div>
